<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.namboodiri.illam.AboutActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="About Illam"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="50sp" />
        <TextView
            android:id="@+id/subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="Developers"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
            android:id="@+id/dev1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subtitle1"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:text="Deepak Unnikrishnan  &lt;deepak.cu@gmail.com&gt;"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <TextView
            android:id="@+id/dev2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dev1"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:text="Lekshmi G Krishnan  &lt;lekshmi.g.krishnan@gmail.com&gt;"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />
        <TextView
            android:id="@+id/dev3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dev2"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:text="Nikhil Punathil  &lt;nikhilpe@gmail.com&gt;"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <TextView
            android:id="@+id/subtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dev3"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="Source Code"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/sourceUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subtitle2"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:onClick="onSourceClick"
            android:text="https://github.com/deepakcu/illam"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
