<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.namboodiri.illam.RelationshipFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card_rel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:onClick="selectPerson"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:focusable="auto"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:src="@drawable/profile" />

                <TextView
                    android:id="@+id/rel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="20dp"
                    android:text="Select Person 1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <ImageButton
            android:id="@+id/invert"
            android:layout_width="50dp"
            android:enabled="false"
            android:layout_marginTop="25dp"
            android:onClick="invert"
            android:background="@drawable/circle"
            android:src="@android:drawable/ic_popup_sync"
            android:layout_gravity="center_horizontal"
            android:layout_height="50dp" />

        <android.support.v7.widget.CardView
            android:id="@+id/card_rel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:onClick="selectPerson"
            android:layout_marginRight="10dp"
            android:layout_marginTop="25dp"
            android:clickable="true"
            android:focusable="auto"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:src="@drawable/profile" />

                <TextView
                    android:id="@+id/rel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="20dp"
                    android:text="Select Person 2"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <Button
            android:id="@+id/find_rel"
            android:layout_width="wrap_content"
            android:layout_marginTop="50dp"
            android:enabled="false"
            android:onClick="onSearchClick"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="Search" />

    </LinearLayout>
</FrameLayout>
